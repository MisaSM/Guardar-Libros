<%- include ('./partials/header') %>

    <body>
        <%- include ('./partials/navigation') %>
            <br>
            <div class="container d-flex align-items-center justify-content-center">
                <div class="row">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="/img/book.svg" class="img-fluid rounded-start" alt="Icono libro">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">Nombre del libro: <%= name %>
                                    </h5>
                                    <p class="card-text">Sinopsis del libro: <%= description %>
                                    </p>
                                    <p class="card-text"><small class="text-muted">Autor: <%= authorname %> </small></p>


                                    <div class="form-group">
                                        <form action="/editbooks" method="post">
                                            <div class="form-group">
                                                <label for="name" class="form-label">Nombre del libro</label>
                                                <input type="text" name="name" id="name" class="form-control"
                                                    placeholder="Nombre del libro" autofocus>
                                            </div>
                                            <div class="form-group">
                                                <label for="authorname" class="form-label">Autor</label>
                                                <input type="text" name="authorname" id="authorname"
                                                    class="form-control" placeholder="Nombre del autor">
                                            </div>
                                            <div class="form-group">
                                                <label for="description" class="form-label">Descripcion del
                                                    libro</label>
                                                <textarea name="description" id="description" class="form-control"
                                                    rows="2"></textarea>
                                            </div>
                                            <div class="d-grid gap-2">
                                                <input type="submit" value="Enviar" class="btn btn-primary">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>