<%- include ('./partials/header') %>

  <body>
    <%- include ('./partials/navigation') %>
      <br>
      <div class="container">
        <div class="row gap-3">
          <% data.forEach( books=> { %>

            <div class="card mb-3" style="max-width: 540px;">
              <div class="row g-0">
                <div class="col-md-4">
                  <img src="/img/book.svg" class="img-fluid rounded-start" alt="Icono libro">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title">Nombre del libro: <%= books.name %>
                    </h5>
                    <p class="card-text">Sinopsis del libro: <%= books.description %>
                    </p>
                    <p class="card-text"><small class="text-muted">Autor: <%= books.authorname %> </small></p>

                    <div class="d-flex justify-content-between mt-4">
                      <a href="/get/<%= books.id %>" class="btn btn-primary">Editar</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <% }) %>


        </div>
      </div>
  </body>

  </html>