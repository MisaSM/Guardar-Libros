<%- include ('./partials/header.ejs') %> 
<body>
    <%- include ('./partials/navigation.ejs') %> 
    <br>
    <div class="container">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <form action="/new_book" method="post">
                            <div class="form-group">
                                <label for="name" class="form-label">Nombre del libro</label>
                                <input type="text" name="name" id="name" class="form-control" placeholder="Nombre del libro" autofocus>
                            </div>
                            <div class="form-group">
                                <label for="authorname" class="form-label">Autor</label>
                                <input type="text" name="authorname" id="authorname" class="form-control" placeholder="Nombre del autor">
                           </div>
                            <div class="form-group">
                                <label for="description" class="form-label">Descripcion del libro</label>
                                <textarea name="description" id="description" class="form-control" rows="2"></textarea>
                            </div>
                            <div class="d-grid gap-2">
                                <input type="submit" value="Enviar" class="btn btn-primary">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
